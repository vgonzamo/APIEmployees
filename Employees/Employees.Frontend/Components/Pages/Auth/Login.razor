<MudDialog>
    <DialogContent>
        <EditForm Model="LoginDTOS" OnValidSubmit="LoginAsync">
            <DataAnnotationsValidator />
            <MudGrid Class="mb-4">
                <MudItem xs="12" sm="12">
                    <MudTextField Label="Email" @bind-Value="@LoginDTOS.Email" InputType="InputType.Email" />
                    <ValidationMessage For="@(() => LoginDTOS.Email)" />
                </MudItem>
                <MudItem xs="12" sm="12">
                    <MudTextField Label="Contraseña" @bind-Value="@LoginDTOS.Password" InputType="InputType.Password" />
                    <ValidationMessage For="@(() => LoginDTOS.Password)" />
                </MudItem>
            </MudGrid>
            <MudGrid Class="mb-4">
                <MudItem xs="12" sm="6" Class="d-flex justify-content-center">
                    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Login" Color="Color.Primary" ButtonType="ButtonType.Submit" FullWidth="true">
                        Iniciar Sesión
                    </MudButton>
                </MudItem>
                <MudItem xs="12" sm="6" Class="d-flex justify-content-center">
                    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Cancel" Color="Color.Error" OnClick="CloseModal" FullWidth="true">
                        Cancelar
                    </MudButton>
                </MudItem>
            </MudGrid>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudItem xs="12" sm="12">
            <MudLink Href="/Register" Underline="Underline.Always">¿No eres usuario aún? Registrate aquí</MudLink>
        </MudItem>
        <MudItem xs="12" sm="12">
            <MudLink OnClick="ShowModalRecoverPassword" Underline="Underline.Always">¿Has olvidado tu contraseña?</MudLink>
        </MudItem>
        
    </DialogActions>
</MudDialog>



